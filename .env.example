# Database configuration
DATABASE_URL=sqlite:///data/lcbo_products.db

# Crawler settings
MIN_REQUEST_DELAY=2
MAX_REQUEST_DELAY=5
MAX_RETRIES=3
CONCURRENT_REQUESTS=1

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/crawler.log

# User agents rotation
ROTATE_USER_AGENTS=true

# Time restrictions (24-hour format)
AVOID_HOURS_START=17  # 5 PM
AVOID_HOURS_END=20    # 8 PM